<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical"
        tools:context=".ui.names.NamesFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fill_players_name"
            android:textSize="@dimen/title_size" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/player_1"
            style="@style/name_input_layout"
            android:hint="@string/player_1"
            app:counterMaxLength="20">

            <com.google.android.material.textfield.TextInputEditText style="@style/name_edit_view" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/player_2"
            style="@style/name_input_layout"
            android:hint="@string/player_2"
            app:counterMaxLength="20">

            <com.google.android.material.textfield.TextInputEditText style="@style/name_edit_view" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/player_3"
            style="@style/name_input_layout"
            android:hint="@string/player_3"
            app:counterMaxLength="20">

            <com.google.android.material.textfield.TextInputEditText style="@style/name_edit_view" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/player_4"
            style="@style/name_input_layout"
            android:hint="@string/player_4"
            app:counterMaxLength="20">

            <com.google.android.material.textfield.TextInputEditText style="@style/name_edit_view" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/used_names"
            android:textSize="@dimen/title_size" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/names_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="LinearLayoutManager"
            tools:listitem="@layout/item_names" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/next_view"
        android:src="@drawable/ic_navigate_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/next_fab" />
</androidx.constraintlayout.widget.ConstraintLayout>
